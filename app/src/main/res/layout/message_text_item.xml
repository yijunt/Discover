<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin">

    <RelativeLayout
        android:id="@+id/message_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/message_blue_box"
        android:padding="@dimen/edit_text_larger_padding">

        <TextView
            android:id="@+id/messageDataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:minWidth="120dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size"
            tools:text="lorem_ipsum" />

        <TextView
            android:id="@+id/MessageTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/messageDataTextView"
            android:layout_alignRight="@id/messageDataTextView"
            android:layout_below="@id/messageDataTextView"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textSize="12sp"
            tools:text="3/15/2018 3:00 PM" />
    </RelativeLayout>
</FrameLayout>